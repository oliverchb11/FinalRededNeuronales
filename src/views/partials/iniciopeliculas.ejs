              value="<%= Peliculas[i].idpelicula %>"
              name="idpeliculafav"
              style="display: none;"
            />
            <p class="card-text" id="sinopsisP"><%= Peliculas[i].sinopsis %></p>
            <p>Calificaci√≥n:</p>
            <% for(var y = 0; y < Peliculas[i].calificacion; y++) {%>
            <button class="btn btn-primary fas fa-star" id="start">
              <%= %>
            </button>
            <% } %>
            <br />
            <br />
            <button type="submit" class="btn btn-primary">
              <li class="fas fa-star" style="color: yellow;"></li>
              Agregar a Favoritos
              <li class="fas fa-star" style="color: yellow;"></li>
            </button>
          </div>
        </div>
      </form>
    </div>
    <% } %><% if (Peliculas==''){ %>
