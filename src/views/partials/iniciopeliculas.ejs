            height="400px"
            alt="..."
          />
          <input
            value="<%= Peliculas[i].imgUrl%>"
            name="imagenpelicula"
            style="display: none;"
            class="card-img-top"
            height="400px"
            alt="..."
          />
          <div class="card-body">
            <h3><%= Peliculas[i].title %></h3>
            <input
              value="<%=  Peliculas[i].title %>"
              name="titulopelicula"
              style="display: none;"
            />
