<div class="container">
  <h1>Series Calificadas:</h1>
  <div class="row">
    <% for(var i = 0; i < serie.length; i++) { %>
    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <img
          src="https://image.tmdb.org/t/p/w500/qv30R1uDDKTLWDlNc3qi6MRdRf0.jpg"
          class="card-img-top"
          alt="..."
        />
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card-body">
        <h5 class="card-title text-danger"><%= serie[i].name %></h5>
        <h5>Sinopsis:</h5>
        <p class="card-text text-justify" id="comments">
          <%= serie[i].sinopsis %>
        </p>
        <% for(var y = 0; y < serie[i].calificacion; y++) {%>
        <button class="btn btn-primary fas fa-star" id="start2">
          <%= %>
        </button>
        <% } %>
        <br />
        <br />
        <a href="#" class="btn btn-primary"
          ><li class="fas fa-star" style="color: yellow;"></li>
          Agregar Favoritos
          <li class="fas fa-star" style="color: yellow;"></li
        ></a>
      </div>
    </div>
    <% } %>
  </div>
</div>
